<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#F3F3F3"
    app:cardCornerRadius="0dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="0dp">

        <!--text view for displaying our note text-->

        <!--text view for displaying our last updated text-->

        <!--imageview for displaying delete icon-->

        <TextView
            android:id="@+id/idTVTitulo"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:padding="4dp"
            android:text="ReuniÃ£o"
            android:textColor="#000b76"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTVDate"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVTitulo"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="157dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/idTVDate2"
            android:padding="4dp"
            android:text="Data"
            android:textColor="#757575"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/idTVDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVTitulo"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="0dp"
            android:padding="4dp"
            android:text="Data:"
            android:textColor="#000b76"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/idTVHoraNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVDate"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:background="#F3F3F3"
            android:padding="4dp"
            android:text="Hora:"
            android:textColor="#000b76"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/idTVTipo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVHoraNone"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:background="#F3F3F3"
            android:padding="4dp"
            android:text="Tipo:"
            android:textColor="#000b76"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/idTVHora"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVDate"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="190dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/idTVHoraNone"
            android:background="#F3F3F3"
            android:padding="5dp"
            android:text="Hora"
            android:textColor="#757575"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/idTVTipo"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVHora"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="152dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/idTVHoraNone"
            android:background="#F3F3F3"
            android:padding="5dp"
            android:text="Tipo"
            android:textColor="#757575"
            android:textSize="13sp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/idTVHora"
            android:layout_marginTop="32dp"
            android:background="?android:attr/listDivider" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>